@model List<ShoppingMVC.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Gestão de Lojas";
}

<h1>Loja</h1>
<h4 style="color: red;"">@TempData["NameError"]</h4>

@if(Model.Count == 0)
{
    <p>Não há instrumentos cadastrados.</p>
    <a href="/Loja/Cadastrar"><button>Cadastrar instrumentos</button></a>
} 
else
{
    @foreach(var loja in Model)
    {
        <h3>@loja.Nome</h3>

        <p>Nome: @loja.Nome</p>
        <p>E-mail: @loja.Email</p>
        <p>Endereco: @loja.Endereco</p>
        <p>CPF: @loja.CPF</p>
        <p>Pagamento: @loja.Pagamento</p>
        <a href="/Loja/Show/@loja.Id"><button>Detalhes</button></a>
        <a href="/Loja/DeleteLoja/@loja.Id"><button>Deletar instrumento</button></a>
        <hr>
    }
}